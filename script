touch "Osvaldo Perez"

mkdir -R /var/public/sales/data
mkdir -R /var/public/sales/projects
mkdir -R /var/public/techs/data
mkdir -R /var/public/techs/projects
mkdir -R /var/public/devops/data
mkdir -R /var/public/devops/projects

groupadd sales
groupadd techs
groupadd devops

chmod -R 770 /var/public/sales
chgrp -R sales /var/public/sales
chmod -R 770 /var/public/techs
chgrp -R techs /var/public/techs
chmod -R 770 /var/public/devops
chgrp -R devops /var/public/devops

cp /etc/skel /etc/skel-sales
cp /etc/skel /etc/skel-techs
cp /etc/skel /etc/skel-devops

echo "function ipconfig(){\nip addr | grep -v inet6 | grep -v 127.0.0.1 | awk'{print"IP Address:"$2}'\nip route | grep default | awk'{print"Default Gateway:"$3}'\n} >> /etc/skel-sales/.bashrc

echo "phrase='That\'s All Folks'\nexport phrase" >> /etc/skel-techs/.bash_profile

